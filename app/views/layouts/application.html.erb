<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= content_or_default_for :title, @app.name %></title>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag    app_theme,     media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

        <%= content_for :head %>

        <%= disqus_init %>
        <%= setup_browserid %>
        <%= csrf_meta_tags %>

        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div id="container" class="container">
            <div id="page">
                <div id="header" class="jumbotron">
                    <h1><%= link_to @app.name, app_url %></h1>

                    <% if not @app.is_default? %>
                        <span class="powered-by">Powered by</span>
                        <%= link_to "Uplifting Lemma", root_url %>
                    <% end %>
                    <%= content_for :header %>
                </div>

                <div id="content">
                    <%= content_for :content %>
                </div>

                <div id="footer">
                    <% if not @app.is_default? %>
                        <!-- TODO: Write copyright code. -->
                        <span class="powered-by">Powered by</span>
                        <%= link_to "Uplifting Lemma", root_url %>
                    <% end %>
                    <%= content_for :footer %>
                </div>
            </div>
        </div>
    </body>
</html>
