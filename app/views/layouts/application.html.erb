<!DOCTYPE html>
<html lang="en">
    <head>
        <title>
            <%= content_for :title or @app.name %>
        </title>

        <%= stylesheet_link_tag    'application',  media: 'all', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag    app_stylesheet, media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application',                'data-turbolinks-track' => true %>

        <%= content_for :head %>

        <%= disqus_init short_name: app_short_name %>

        <%= setup_browserid %>
        <%= csrf_meta_tags %>

        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <%= content_tag :body, class: app_class do %>
        <div id="background" class="theme-dark-background">
            <div id="container" class="container">
                <div id="page" class="theme-page-shadow">
                    <header id="header" role="banner" class="jumbotron theme-primary-background theme-primary-image">
                        <h1><%= link_to @app.name, app_route.root_url %></h1>

                        <% if not @app.is_default? %>
                            <h2>
                                <span class="powered-by">Powered by</span>
                                <%= link_to "Uplifting Lemma", app_route(App.default).root_url %>
                            </h2>
                        <% end %>

                        <%= content_for :header %>
                    </header>

                    <main id="content" role="main">
                        <%= content_for :content %>
                    </main>

                    <footer id="footer" role="contentinfo">
                        <div class="row">
                            <div class="col-sm-9">
                                <% if not @app.is_default? %>
                                    <!-- TODO: Write copyright code. -->
                                    <span class="powered-by">Powered by</span>
                                    <%= link_to "Uplifting Lemma", app_route(App.default).root_url %>
                                <% end %>
                                Uplifting Lemma &copy; 2015 Chris Bouchard.
                            </div>

                            <div class="col-sm-3 hidden-xs text-right">
                                <% if browserid_authenticated? %>
                                    <%= logout_link "Log out #{browserid_current_user.name}" %>
                                <% else %>
                                    <%= login_link "Log in" %>
                                <% end %>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    <% end %>
</html>
