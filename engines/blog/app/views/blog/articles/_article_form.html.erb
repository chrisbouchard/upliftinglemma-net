<%= bootstrap_form_for article do |form| %>
    <%= form.text_field :title, class: 'input-lg' %>
    <%= form.text_area :body, rows: 5 %>

    <div class="row">
        <div class="col-sm-3 col-sm-offset-9">
            <%= form.submit class: 'btn btn-block btn-primary' %>
        </div>
    </div>
<% end %>

