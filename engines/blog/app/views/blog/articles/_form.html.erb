<%= form_for @article, layout: :basic do |form| %>
    <%= form.text_field :title, class: 'input-lg' %>
    <%= form.text_area :body, rows: 5 %>

    <div class="row">
        <div class="col-sm-3 col-sm-push-9">
            <%= form.submit layout: :block %>
        </div>
        <div class="col-sm-9 col-sm-pull-3">
            <p class="small">You can format your article using
            <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a>.</p>
        </div>
    </div>
<% end %>

